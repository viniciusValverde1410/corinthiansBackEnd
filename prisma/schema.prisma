generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Title {
  id       Int      @id @default(autoincrement())
  name    String 
  imageUrl String
  description String
  wonYear String // split(",")
  category String

  @@map("titles")
}

model Player {
  id       Int      @id @default(autoincrement())
  name    String 
  imageUrl String
  position String
  number Int
  height String
  age Int

  @@map("players")
}

model Shields {
  id       Int      @id @default(autoincrement())
  imageUrl String
  year String
  
  @@map("shields")
}

model Legends {
  id       Int      @id @default(autoincrement())
  name    String  
  number Int
  position String
  imageUrl String
  shortText String

  @@map("legends")
}

model managerTeam {
  id       Int      @id @default(autoincrement())
  name    String  
  imageUrl String
  shortText String

  @@map("managerTeam")
}